{
  "name": "lit-date",
  "version": "1.0.2",
  "description": "Light-weight, faster datetime formatter for modern browsers",
  "keywords": [
    "date",
    "datetime",
    "format",
    "formatter"
  ],
  "repository": "git@github.com:3846masa/lit-date.git",
  "license": "MIT",
  "author": "3846masa <3846masahiro+git@gmail.com>",
  "main": "lib/index.js",
  "jsdelivr": "lib/index.umd.js",
  "unpkg": "lib/index.umd.js",
  "module": "lib/index.mjs",
  "browser": "lib/index.umd.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all -p build:*",
    "build:rollup": "rollup -c rollup.config.mjs",
    "clean": "rimraf lib",
    "prepublish": "npm run build",
    "pretest": "npm run build",
    "test": "npm-run-all test:*",
    "test:ava": "nyc ava",
    "test:size-limit": "size-limit",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint --ext .js,.cjs,.mjs,.ts .",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "format": "npm-run-all format:*",
    "format:eslint": "eslint --fix --ext .js,.cjs,.mjs,.ts .",
    "format:prettier": "prettier --write ."
  },
  "ava": {
    "environmentVariables": {
      "TS_NODE_PROJECT": "tsconfig.test.json"
    },
    "extensions": [
      "ts"
    ],
    "files": [
      "tests/**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true
  },
  "devDependencies": {
    "@3846masa/configs": "github:3846masa/configs",
    "@size-limit/file": "8.2.6",
    "ava": "4.3.3",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "rimraf": "5.0.1",
    "rollup": "3.26.3",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.35.0",
    "size-limit": "8.2.6",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "size-limit": [
    {
      "path": "./lib/index.umd.js",
      "limit": "1 kB"
    }
  ]
}
